  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/secret-manager": "^3.2.3",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.11",
    "firebase-tools": "^9.2.2",
    "husky": "^4.2.5",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "private": true
